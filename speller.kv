WindowManager:
    Greeting:
    SelectFile:
    AskSpellings:

<Greeting>:
    name: "greeting window"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Welcome Hamdan"
            font_name: "Jomhuria-Regular.ttf"
            font_size: "170dp"
            color: 255/255, 173/255, 173/255, 255/255

        Button:
            background_color: 23/255, 23/255, 23/255, 0

            text: "Choose file >"
            font_name: "DelaGothicOne-Regular.ttf"
            font_size: "20dp"

            size_hint: .5, None
            height: "85dp"

            pos_hint: { "center_x": .5 }

            canvas.before:
                Color:
                    rgba: 214/255, 40/255, 40/255, 1

                RoundedRectangle:
                    size: self.size
                    pos: self.pos

                    radius: [24]

            on_press:
                app.root.current = "select file window"
                app.change_window_background("#264653")

        Label: # This is for adding additional space
            size_hint: 1, .5

<SelectFile>:
    name: "select file window"

    BoxLayout:
        orientation: "vertical"

        FileChooserListView:
            on_submit:
                app.pdf_file_path = self.selection[0]
                app.root.current = "ask spellings window"
                app.get_vocab_words(app.pdf_file_path)
                app.change_window_background("#d9ed92")

            filters: ["*.pdf"]
            path: "C:/Users/ayaan/OneDrive/Desktop"


<AskSpellings>:
    name: "ask spellings window"

    ScrollView:
        BoxLayout:
            size_hint_y: None
            height: "1000dp"
            orientation: "vertical"

            Label:
                text: "Spell the words"
                color: 0/255, 127/255, 95/255, 1
                font_name: "DelaGothicOne-Regular.ttf"
                font_size: "75dp"

            Label: # Empty text for space
                text: ""
                font_size: "30dp"

            # spelling 1
            BoxLayout:
                Button:
                    on_press: app.speak_word("b1")
                    background_color: 0, 0, 0, 0
                    size_hint: None, None
                    size: "100dp", "100dp"

                    Image:
                        source: "speaker.png"
                        allow_stretch: True
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y


                TextInput:
                    multiline: False
                    font_size: "20dp"
                    on_text_validate:
                        app.add_widget_in_input_list(self, 0)
                        app.user_vocab_words[0] = self.text.lower()

